<%= search_form_for @search do |f| %>
  <div class="row collapse">
    <div class="right">
      <div class="medium-2 small-9 columns"><div class="input_height"><%= f.text_field :name_cont %></div></div>
      <div class="medium-2 small-3 columns"><div class="actions"><%= f.submit "Search", class: "alert button"%></div></div>
    </div>
  </div>
<% end %>

<p style="text-align: center"><%= link_to 'Do you have a great idea to share with us???', new_project_path , class: "button [radius round]"%></p>





<table>
  <thead>
    <tr>
      <th><%= sort_link(@search, :name, "Project Name") %></th>
      <th>Image</th>
      <th><%= sort_link(@search, :country, "Country") %></th>
      <th><%= sort_link(@search, :university, "University") %></th>
      <th><%= sort_link(@search, :major, "Major") %></th>
      <th>Description</th>
      <th>Owner</th>
      <th>Contact</th>
  
      
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>

      <tr>
        <td><%= project.name %></td>
        <td><%= image_tag project.photo.url(:small) %></td>
        <td><%= project.country %></td>
        <td><%= project.university %></td>
        <td><%= project.major %></td>
        <td><%= project.description %></td>
        <td><%= project.owner %></td>
        <td><%= project.contact %></td>
        
        <td><%= link_to 'Show', project , class:  "[large] button [alert success secondary] [disabled]"%></td>
        
        <td><%= link_to 'Edit', edit_project_path(project), class: "button [radius round]"%></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } , class: "alert button"%></td>
        
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>


