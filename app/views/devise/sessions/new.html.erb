


<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="row">
	<div class="new_distance"><div class=""><h3><%= f.label :name ,"Sign in"%></h3></div></div><br>
  </div>

  <div class="row">
    <div class="new_distance"><div class="medium-2 large-3 columns"><h3><%= f.label :email,"email: "%></h3></div></div><br>
    <div class="medium-2 large-9 columns "><%= f.email_field :email, :autofocus => true %></div>
  </div>

  <div class="row">
    <div class="new_distance"><div class="medium-2 large-3 columns"><h3><%= f.label :password %></h3></div></div><br>
    <div class="medium-2 large-9 columns "><%= f.password_field :password %></div>
  </div>
 
 
  <% if devise_mapping.rememberable? -%>
    <div class="row">
      <div class="new_distance"><div class="medium-2 large-3 columns"><h3><%= f.check_box :remember_me %></h3></div></div><br>
      <div class="medium-2 large-9 columns "><h2><strong><%= f.label :remember_me %></strong></h2></div>
    </div>
  <% end %>

  <div class="sign"><%= f.submit "Sign in" , class:  "[large] button [alert success secondary] [disabled]"%></div>
<% end %>

<%= render "devise/shared/links" %>
